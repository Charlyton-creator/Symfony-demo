{% extends 'base.html.twig' %}
{% block title%}Liste des articles{% endblock %}
{% block body %}
{% if articles %}
<table class="table table-striped" id="articles">
  <thead>
    <tr>
      <th scope="col">Nom</th>
      <th scope="col">Prix</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  {% for article in articles %}
    <tr>
      <td>{{article.nom()}}</td>
      <td>{{article.prix()}}</td>
      <td>
        <a href="/article/{{article.id()}}" class="btn btn-dark">Details</a>
        <a href="/article/update/{{article.id()}}" class="btn btn-warning">Update</a>
        <a href="/article/{{article.id()}}" class="btn btn-danger">Delete</a>
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>
{% else %}
<div> Auncun Article </div>
{% endif %}
{% endblock %}